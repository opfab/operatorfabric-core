<br/>
<div class="opfab-input">
    <label for="taskDescription"> TASK DESCRIPTION</label>
    <input size="50" type="text" id="taskDescription" value="{{card.data.taskDescription}}"> </input> 
</div>
<br/>


<div class="opfab-border-box">
    <label> REPEAT EVERY</label>
    <table width="100%" style="margin-bottom: -5px;">
        <tr>
            <td><label class="opfab-checkbox"> MONDAY <input type="checkbox" id="Monday" {{conditionalAttribute (arrayContains card.data.daysOfWeek 1) 'checked'}}>   <span class="opfab-checkbox-checkmark"> </span>   </label> </td>
            <td><label class="opfab-checkbox"> TUESDAY <input type="checkbox" id="Tuesday" {{conditionalAttribute (arrayContains card.data.daysOfWeek 2) 'checked'}}>   <span class="opfab-checkbox-checkmark"> </span>   </label> </td>
            <td><label class="opfab-checkbox"> WEDNESDAY <input type="checkbox" id="Wednesday" {{conditionalAttribute (arrayContains card.data.daysOfWeek 3) 'checked'}}>   <span class="opfab-checkbox-checkmark"> </span>   </label> </td>
            <td><label class="opfab-checkbox"> THURSDAY <input type="checkbox" id="Thursday" {{conditionalAttribute (arrayContains card.data.daysOfWeek 4) 'checked'}}>   <span class="opfab-checkbox-checkmark"> </span>   </label> </td>
            <td><label class="opfab-checkbox"> FRIDAY <input type="checkbox" id="Friday" {{conditionalAttribute (arrayContains card.data.daysOfWeek 5) 'checked'}}>   <span class="opfab-checkbox-checkmark"> </span>   </label> </td>
            <td><label class="opfab-checkbox"> SATURDAY <input type="checkbox" id="Saturday" {{conditionalAttribute (arrayContains card.data.daysOfWeek 6) 'checked'}}>   <span class="opfab-checkbox-checkmark"> </span>   </label> </td>
            <td><label class="opfab-checkbox"> SUNDAY <input type="checkbox" id="Sunday" {{conditionalAttribute (arrayContains card.data.daysOfWeek 7) 'checked'}}>   <span class="opfab-checkbox-checkmark"> </span>   </label> </td>

        </tr>
    </table>

</div>

<br/>
<br/>
<div>

    <table>
        <tr>
            <td style="width:4%">
                AT :
            </td>
            <td style="width:15%">
                <div class="opfab-input">
                    <label> TIME </label>
                    <input type="time" id="time" style="text-align:center" value="{{card.data.hours}}:{{card.data.minutes}}">
                </div>
            </td>

            <td style="width:6%">
    
            </td>
            <td style="width:32%">
                <div class="opfab-input">
                    <label> TASK DURATION (MINUTES) </label>
                    <input size="3" maxlength="3" type="text" id="durationInMinutes" value="{{#if card.data.durationInMinutes}}{{card.data.durationInMinutes}}{{else}}15{{/if}}">
                </div>
            </td>
            <td style="width:6%">
    
            </td>
            <td style="width:32%">
                <div class="opfab-input">
                    <label> MINUTES TO REMIND BEFORE TASK</label>
                    <input size="2" maxlength="2" type="text" id="minutesForReminder" value="{{#if card.data.minutesForReminder}}{{card.data.minutesForReminder}}{{else}}5{{/if}}">
                </div>
            </td>
        </tr>
    </table>

</div>

<br/>

<script>

    userCardTemplate = {
        init: function() {
            this.initSeverity();
            this.initInitialDates();
            this.initUserCardTemplateGateway();
        },

        initSeverity: function() {
            usercardTemplateGateway.setInitialSeverity('ACTION');
        },

        initInitialDates: function() {
            const mystartDate = new Date();
            mystartDate.setTime(mystartDate.getTime());
            usercardTemplateGateway.setInitialStartDate(mystartDate.getTime() + 3600000);
            usercardTemplateGateway.setInitialEndDate(mystartDate.getTime() + 7 * 24 * 3600000);
        },

        initUserCardTemplateGateway: function() {

            usercardTemplateGateway.getSpecificCardInformation = function () {
                const taskDescription = document.getElementById('taskDescription').value;
                
                const time = document.getElementById('time').value;
                const hours =  time.slice(0, 2); // the hours are the 2 first characters
                const minutes =  time.slice(-2); // the minutes are the 2 last characterss
                
                const minutesForReminder =  document.getElementById('minutesForReminder').value;
                const durationInMinutes =  document.getElementById('durationInMinutes').value;

                const daysOfWeek = [];
            
                if (document.getElementById("Monday").checked) daysOfWeek.push(1);
                if (document.getElementById("Tuesday").checked) daysOfWeek.push(2);
                if (document.getElementById("Wednesday").checked) daysOfWeek.push(3);
                if (document.getElementById("Thursday").checked) daysOfWeek.push(4);
                if (document.getElementById("Friday").checked) daysOfWeek.push(5);
                if (document.getElementById("Saturday").checked) daysOfWeek.push(6);
                if (document.getElementById("Sunday").checked) daysOfWeek.push(7);

                const recurrence = {
                    daysOfWeek : daysOfWeek,
                    hoursAndMinutes : {hours:hours,minutes:minutes},
                    durationInMinutes: durationInMinutes
                }
            
                const card = {
                    summary: { key: "task.summary" },
                    title: { key: "task.title" },
                    secondsBeforeTimeSpanForReminder: minutesForReminder * 60,
                    data: {
                        taskDescription: taskDescription,
                        hours: hours,
                        minutes: minutes,
                        durationInMinutes: durationInMinutes,
                        minutesForReminder: minutesForReminder,
                        daysOfWeek: daysOfWeek
                    }
                };

                const timeSpans = [{
                    startDate: usercardTemplateGateway.getStartDate(),
                    endDate: usercardTemplateGateway.getEndDate(),
                    recurrence: recurrence
                }]
                

                return {
                    valid: true,
                    card: card,
                    timeSpans: timeSpans
                };

            }
        }

    }

    userCardTemplate.init();

</script>
