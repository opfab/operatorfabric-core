<script>

    function displayDailyFrequency() {
        document.getElementById("radioButtonMonthlyFreq").checked = false;
        document.getElementById("daysOfWeek").hidden = false;
        document.getElementById("dayPositionInTheMonth").hidden = true;
        document.getElementById("monthsCheckboxesForMonthlyFreq").hidden = true;
        document.getElementById("monthsCheckboxesForDailyFreq").hidden = false;
    }

    function displayMonthlyFrequency() {
        document.getElementById("radioButtonDailyFreq").checked = false;
        document.getElementById("radioButtonMonthlyFreq").checked = true;
        document.getElementById("daysOfWeek").hidden = true;
        document.getElementById("monthsCheckboxesForDailyFreq").hidden = true;
        document.getElementById("monthsCheckboxesForMonthlyFreq").hidden = false;
        document.getElementById("dayPositionInTheMonth").hidden = false;
    }

    function displayNthDayTable() {
        document.getElementById("radioButtonNthWeekday").checked = false;
        document.getElementById("radioButtonNthDay").checked = true;
        document.getElementById("nthWeekdayTable").hidden = true;
        document.getElementById("nthDayTable").hidden = false;
    }

    function displayNthWeekdayTable() {
        document.getElementById("radioButtonNthDay").checked = false;
        document.getElementById("radioButtonNthWeekday").checked = true;
        document.getElementById("nthDayTable").hidden = true;
        document.getElementById("nthWeekdayTable").hidden = false;
    }

    userCardTemplate = {
        occurrenceNumberSelect: null,
        weekdaySelect: null,

        init: function() {
            this.initMultiSelects();
            this.initSeverity();
            this.initInitialDates();
            this.initUserCardTemplateGateway();
            this.initTimeForRecurrence();
            this.doWeHaveToDisplayMonthlyFreqInEditMode();
        },

        initMultiSelects: function() {
            this.occurrenceNumberSelect = opfab.multiSelect.init({
                id: "occurrence-number-select",
                options : [
                    { label: 'First', value: 1 },
                    { label: 'Second', value: 2 },
                    { label: 'Third', value: 3 },
                    { label: 'Fourth', value: 4},
                    { label: 'Last', value: -1 }
                ],
                multiple: true,
                search: true
            });

            this.weekdaySelect = opfab.multiSelect.init({
                id: "weekday-select",
                options : [
                    { label: '', value: ''},    //to clear the selection
                    { label: 'Monday', value: 'MO' },
                    { label: 'Tuesday', value: 'TU' },
                    { label: 'Wednesday', value: 'WE' },
                    { label: 'Thursday', value: 'TH'},
                    { label: 'Friday', value: 'FR' },
                    { label: 'Saturday', value: 'SA'},
                    { label: 'Sunday', value: 'SU' }
                ],
                multiple: false,
                search: true
            });
        },

        doWeHaveToDisplayMonthlyFreqInEditMode: function() {
            const freq = "{{card.data.freq}}";

            if (freq === 'MONTHLY') {
                displayMonthlyFrequency();
                userCardTemplate.selectValuesInEditModeForMonthlyFreq();
            } else {
                userCardTemplate.selectValuesInEditModeForDailyFreq();
            }
        },

        selectValuesInEditModeForDailyFreq: function () {
            const byweekday = "{{card.data.byweekday}}";
            const bymonth = "{{card.data.bymonth}}";

            if (!!byweekday) {
                const byweekdayArray = byweekday.split(',');

                if (byweekdayArray.includes('MO')) document.getElementById("Monday").checked = true;
                if (byweekdayArray.includes('TU')) document.getElementById("Tuesday").checked = true;
                if (byweekdayArray.includes('WE')) document.getElementById("Wednesday").checked = true;
                if (byweekdayArray.includes('TH')) document.getElementById("Thursday").checked = true;
                if (byweekdayArray.includes('FR')) document.getElementById("Friday").checked = true;
                if (byweekdayArray.includes('SA')) document.getElementById("Saturday").checked = true;
                if (byweekdayArray.includes('SU')) document.getElementById("Sunday").checked = true;
            }

            if (!!bymonth) {
                const bymonthArray = bymonth.split(',');

                if (bymonthArray.includes('1'))  document.getElementById("JanuaryDaily").checked = true;
                if (bymonthArray.includes('2'))  document.getElementById("FebruaryDaily").checked = true;
                if (bymonthArray.includes('3'))  document.getElementById("MarchDaily").checked = true;
                if (bymonthArray.includes('4'))  document.getElementById("AprilDaily").checked = true;
                if (bymonthArray.includes('5'))  document.getElementById("MayDaily").checked = true;
                if (bymonthArray.includes('6'))  document.getElementById("JuneDaily").checked = true;
                if (bymonthArray.includes('7'))  document.getElementById("JulyDaily").checked = true;
                if (bymonthArray.includes('8'))  document.getElementById("AugustDaily").checked = true;
                if (bymonthArray.includes('9'))  document.getElementById("SeptemberDaily").checked = true;
                if (bymonthArray.includes('10')) document.getElementById("OctoberDaily").checked = true;
                if (bymonthArray.includes('11')) document.getElementById("NovemberDaily").checked = true;
                if (bymonthArray.includes('12')) document.getElementById("DecemberDaily").checked = true;
            }
        },

        selectValuesInEditModeForMonthlyFreq: function () {
            const bysetpos = "{{card.data.bysetpos}}";
            const byweekday = "{{card.data.byweekday}}";
            const bymonthday = "{{card.data.bymonthday}}";
            const bymonth = "{{card.data.bymonth}}";

            if (!!bysetpos && bysetpos.length > 0 && !!byweekday && byweekday.length > 0) {
                const bysetposArray = bysetpos.split(',');
                this.occurrenceNumberSelect.setSelectedValues(bysetposArray);

                const byweekdayArray = byweekday.split(',');
                this.weekdaySelect.setSelectedValues(byweekdayArray);
                displayNthWeekdayTable();
            } else {
                if (!!bymonthday) {
                    const bymonthdayArray = bymonthday.split(',');
                    for (const monthday of bymonthdayArray) {
                        if (monthday !== '-1' && monthday !== '1') document.getElementById("nthDay").value = Number(monthday);
                    }
                }
                displayNthDayTable();
            }

            if (!!bymonth) {
                const bymonthArray = bymonth.split(',');

                if (bymonthArray.includes('1'))  document.getElementById("JanuaryMonthly").checked = true;
                if (bymonthArray.includes('2'))  document.getElementById("FebruaryMonthly").checked = true;
                if (bymonthArray.includes('3'))  document.getElementById("MarchMonthly").checked = true;
                if (bymonthArray.includes('4'))  document.getElementById("AprilMonthly").checked = true;
                if (bymonthArray.includes('5'))  document.getElementById("MayMonthly").checked = true;
                if (bymonthArray.includes('6'))  document.getElementById("JuneMonthly").checked = true;
                if (bymonthArray.includes('7'))  document.getElementById("JulyMonthly").checked = true;
                if (bymonthArray.includes('8'))  document.getElementById("AugustMonthly").checked = true;
                if (bymonthArray.includes('9'))  document.getElementById("SeptemberMonthly").checked = true;
                if (bymonthArray.includes('10')) document.getElementById("OctoberMonthly").checked = true;
                if (bymonthArray.includes('11')) document.getElementById("NovemberMonthly").checked = true;
                if (bymonthArray.includes('12')) document.getElementById("DecemberMonthly").checked = true;
            }
        },

        initSeverity: function() {
            usercardTemplateGateway.setInitialSeverity('ACTION');
        },

        initInitialDates: function() {
            const mystartDate = new Date();
            mystartDate.setTime(mystartDate.getTime());
            usercardTemplateGateway.setInitialStartDate(mystartDate.getTime() + 3600000);
            usercardTemplateGateway.setInitialEndDate(mystartDate.getTime() + 7 * 24 * 3600000);
        },

        initTimeForRecurrence: function() {
            const defaultTimeForRecurrence = new Date();
            defaultTimeForRecurrence.setTime(defaultTimeForRecurrence.getTime() + 3600000);

            const timeControl = document.getElementById('time');
            if (! timeControl.value) {
                timeControl.value = defaultTimeForRecurrence.getHours() + ':' + defaultTimeForRecurrence.getMinutes();
            }
        },

        initUserCardTemplateGateway: function() {
            that = this;

            usercardTemplateGateway.getSpecificCardInformation = function () {
                const taskDescription = document.getElementById('taskDescription').value;
                
                const time = document.getElementById('time').value;
                const byhour =  [time.slice(0, 2) * 1]; // the hours are the 2 first characters
                const byminute =  [time.slice(-2) * 1]; // the minutes are the 2 last characters
                
                const minutesForReminder =  document.getElementById('minutesForReminder').value;
                const durationInMinutes =  document.getElementById('durationInMinutes').value;

                let freq = '';
                let byweekday = [];

                const bymonth = [];
                const bymonthday = [];
                let bysetpos = [];

                if (document.getElementById("radioButtonMonthlyFreq").checked === true) {
                    freq = 'MONTHLY';

                    if (document.getElementById("JanuaryMonthly").checked)   bymonth.push(1);
                    if (document.getElementById("FebruaryMonthly").checked)  bymonth.push(2);
                    if (document.getElementById("MarchMonthly").checked)     bymonth.push(3);
                    if (document.getElementById("AprilMonthly").checked)     bymonth.push(4);
                    if (document.getElementById("MayMonthly").checked)       bymonth.push(5);
                    if (document.getElementById("JuneMonthly").checked)      bymonth.push(6);
                    if (document.getElementById("JulyMonthly").checked)      bymonth.push(7);
                    if (document.getElementById("AugustMonthly").checked)    bymonth.push(8);
                    if (document.getElementById("SeptemberMonthly").checked) bymonth.push(9);
                    if (document.getElementById("OctoberMonthly").checked)   bymonth.push(10);
                    if (document.getElementById("NovemberMonthly").checked)  bymonth.push(11);
                    if (document.getElementById("DecemberMonthly").checked)  bymonth.push(12);

                    if (document.getElementById("radioButtonNthDay").checked === true) {
                        if (!!document.getElementById("nthDay").value)            bymonthday.push(document.getElementById("nthDay").value);
                        if (document.getElementById("firstDay").checked === true) bymonthday.push(1);
                        if (document.getElementById("lastDay").checked === true)  bymonthday.push(-1);

                        if (bymonthday.length === 0) {
                            return {valid: false , errorMsg: 'You must provide at least one nth day.'}
                        }
                    }

                    if (document.getElementById("radioButtonNthWeekday").checked === true) {
                        bysetpos = that.occurrenceNumberSelect.getSelectedValues();
                        if (that.weekdaySelect.getSelectedValues().length > 0) {
                            byweekday = [that.weekdaySelect.getSelectedValues()];
                        }

                        if ((bysetpos.length === 0) || (byweekday.length === 0)) {
                            return {valid: false , errorMsg: 'You must provide an occurrence number and a weekday.'}
                        }
                    }
                } else {
                    freq = 'DAILY';
                    if (document.getElementById("Monday").checked)    byweekday.push('MO');
                    if (document.getElementById("Tuesday").checked)   byweekday.push('TU');
                    if (document.getElementById("Wednesday").checked) byweekday.push('WE');
                    if (document.getElementById("Thursday").checked)  byweekday.push('TH');
                    if (document.getElementById("Friday").checked)    byweekday.push('FR');
                    if (document.getElementById("Saturday").checked)  byweekday.push('SA');
                    if (document.getElementById("Sunday").checked)    byweekday.push('SU');

                    if (document.getElementById("JanuaryDaily").checked)   bymonth.push(1);
                    if (document.getElementById("FebruaryDaily").checked)  bymonth.push(2);
                    if (document.getElementById("MarchDaily").checked)     bymonth.push(3);
                    if (document.getElementById("AprilDaily").checked)     bymonth.push(4);
                    if (document.getElementById("MayDaily").checked)       bymonth.push(5);
                    if (document.getElementById("JuneDaily").checked)      bymonth.push(6);
                    if (document.getElementById("JulyDaily").checked)      bymonth.push(7);
                    if (document.getElementById("AugustDaily").checked)    bymonth.push(8);
                    if (document.getElementById("SeptemberDaily").checked) bymonth.push(9);
                    if (document.getElementById("OctoberDaily").checked)   bymonth.push(10);
                    if (document.getElementById("NovemberDaily").checked)  bymonth.push(11);
                    if (document.getElementById("DecemberDaily").checked)  bymonth.push(12);
                }

                const rRule = {
                    freq: freq,
                    byweekday : byweekday,
                    byhour: byhour,
                    byminute: byminute,
                    durationInMinutes: durationInMinutes,
                    bymonth: bymonth,
                    bysetpos: bysetpos,
                    bymonthday: bymonthday
                }

                const card = {
                    summary: { key: "taskAdvanced.summary" },
                    title: { key: "taskAdvanced.title" },
                    secondsBeforeTimeSpanForReminder: minutesForReminder * 60,
                    data: {
                        taskDescription: taskDescription,
                        freq: freq,
                        byhour: byhour,
                        byminute: byminute,
                        durationInMinutes: durationInMinutes,
                        minutesForReminder: minutesForReminder,
                        byweekday: byweekday,
                        bymonth: bymonth,
                        bysetpos: bysetpos,
                        bymonthday: bymonthday
                    },
                    rRule: rRule
                };

                return {
                    valid: true,
                    card: card
                };

            }
        }

    }

    userCardTemplate.init();

</script>
