{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "importHelpers": true,
    "module": "es2020",
    "resolveJsonModule": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@env/*": [
        "environments/*"
      ],
      "@ofStore/*": [
        "app/store/*"
      ],
      "@ofActions/*": [
        "app/store/actions/*"
      ],
      "@ofEffects/*": [
        "app/store/effects/*"
      ],
      "@ofSelectors/*": [
        "app/store/selectors/*"
      ],
      "@ofStates/*": [
        "app/store/states/*"
      ],
      "@ofServices/*": [
        "app/services/*"
      ],
      "@ofModel/*": [
        "app/business/model/*"
      ],
      "@tests/*": [
        "tests/*"
      ],
      "file-saver-es": [
        "@types/file-saver"
      ]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2019",
      "es2021",
      "es2022",
      "dom",
      "dom.iterable"
    ],
    "useDefineForClassFields": false
  }

}
